# =============================================================================
# QA Agent Environment Configuration
# =============================================================================

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# OpenAI API Key (Required)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Tavily API Key (Required)
# Get from: https://tavily.com/
TAVILY_API_KEY=your-tavily-api-key-here

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================

# Maximum number of search results to return (1-50)
# Default: 10
MAX_RESULTS=10

# Search depth for Tavily API
# Options: "basic" or "advanced"
# - basic: Quick search, faster, less comprehensive
# - advanced: Comprehensive search, slower, more thorough
# Default: basic
SEARCH_DEPTH=basic

# Maximum content size for search results (characters)
# Default: 10000
MAX_CONTENT_SIZE=10000

# Maximum content size for scraped pages (characters)
# Default: 20000
MAX_SCRAPE_LENGTH=20000

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# LLM creativity/temperature (0.0-1.0)
# - 0.0: Most deterministic, consistent answers
# - 0.1: Good balance for Q&A (recommended)
# - 0.5: More creative responses
# - 1.0: Most creative, less predictable
# Default: 0.1
LLM_TEMPERATURE=0.1

# Maximum tokens for LLM response
# - 1000: Short responses
# - 3000: Standard responses (recommended)
# - 4000: Longer responses
# - 8000: Very long responses
# Default: 3000
LLM_MAX_TOKENS=3000

# LLM timeout in seconds
# Default: 60
LLM_TIMEOUT=60

# =============================================================================
# REQUEST CONFIGURATION
# =============================================================================

# Request timeout in seconds
# Default: 30
REQUEST_TIMEOUT=30

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================

# Enable search result summarization
# Options: true/false
# - true: Summarize long search results (requires OpenAI API)
# - false: Return full search results
# Default: false
ENABLE_SEARCH_SUMMARIZATION=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Log level for application
# Options: DEBUG, INFO, WARNING, ERROR
# Default: INFO
LOG_LEVEL=INFO

# Port for the API server
# Default: 8000
PORT=8000

# Host for the API server
# Default: 0.0.0.0 (all interfaces)
HOST=0.0.0.0

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Session timeout in seconds
# Default: 3600 (1 hour)
SESSION_TIMEOUT=3600

# Maximum chat history length
# Default: 5
MAX_CHAT_HISTORY=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable CORS (Cross-Origin Resource Sharing)
# Options: true/false
# Default: true
ENABLE_CORS=true

# Allowed CORS origins (comma-separated)
# Default: "*" (all origins)
CORS_ORIGINS="*"

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Enable health check endpoint
# Options: true/false
# Default: true
ENABLE_HEALTH_CHECK=true

# Health check interval in seconds
# Default: 30
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Quick Search Configuration (Fast, Basic)
# SEARCH_DEPTH=basic
# MAX_RESULTS=5
# LLM_TEMPERATURE=0.1
# LLM_MAX_TOKENS=2000

# Comprehensive Search Configuration (Thorough, Slower)
# SEARCH_DEPTH=advanced
# MAX_RESULTS=15
# LLM_TEMPERATURE=0.1
# LLM_MAX_TOKENS=4000
# ENABLE_SEARCH_SUMMARIZATION=true

# Development Configuration (Debug, Verbose)
# LOG_LEVEL=DEBUG
# LLM_TEMPERATURE=0.2
# MAX_RESULTS=10
# SEARCH_DEPTH=basic

# Production Configuration (Optimized, Secure)
# LOG_LEVEL=INFO
# LLM_TEMPERATURE=0.1
# MAX_RESULTS=10
# SEARCH_DEPTH=basic
# ENABLE_CORS=false
# CORS_ORIGINS="https://yourdomain.com" 